{% block body %}

        <div class="row justify-content-center">
        
            <div class="zagol-col-md-8">
                <div class="card-group">
                    <div class="card  pa-to-1 pa-le-2 pa-bo-0 pa-ri-2">
                        <div class="card-body">
                            {% include '_flashes.html.twig' %}

                            <h1 class="zagol-teni-44 ma-bo-1 ">Авторизация</h1>

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <form method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-envelope"></i></span>
                                    </div>

                                    <input class="form-control" type="email" name="email"
                                           value="{{ last_username }}"
                                           placeholder="Email"/>
                                </div>
                                <div class="input-group ma-bo-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-lock"></i></span>
                                    </div>
                                    <input class="form-control" type="password" name="password"
                                           placeholder="Password"/>
                                </div>
                                <div class="card-body text-center ">
                                    <button class="btnn btnn-log " type="submit">
                                        <span class=" zagol-teni  zagol-teni--px30 "> Войди на сайт </span>
                                    </button>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="checkbox mb-3">
                                            <label>
                                                <input type="checkbox" name="_remember_me">
                                                <span class = " fo-si ">Запомни меня</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class=" text-right ma-to-2">
                                        <a class="btnn btnn-log" href="{{ path('auth.reset') }}">
                                            <span class=" zagol-teni  zagol-teni--px30 ">  Забыли пароль ? </span>
                                        </a>
                                    </div>
                                </div>
                            </form>

                        </div>
